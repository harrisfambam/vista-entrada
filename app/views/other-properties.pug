extends layout

block navbar
    +navbar('other-properties')

block content

    div.page-other-properties

        div.page-header
            h1 Other Properties

        p.text-muted.text-center click a header to sort

        table.sortable.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th Unit #
                    th Block #
                    th Lot #
                    th Street
                    th Size (Acres)
                    th Price
            tbody
                each item in properties
                    tr
                        td #{item.unit}
                        td #{item.block}
                        td #{item.lot}
                        td #{item.street}
                        if(item.size)
                            td #{item.size.toFixed(2)}
                        else
                            td -
                        td #{item.price}

block append scripts
    script(src=url('js/table-sort.js'))
